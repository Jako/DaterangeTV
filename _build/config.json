{
  "name": "DaterangeTV",
  "lowCaseName": "daterangetv",
  "description": "Date range custom template variable",
  "author": "Thomas Jakobi",
  "version": "1.3.0",
  "package": {
    "elements": {
      "plugins": [
        {
          "name": "DaterangeTV",
          "file": "daterange.plugin.php",
          "events": [
            "OnManagerPageBeforeRender",
            "OnTVInputRenderList",
            "OnTVOutputRenderList",
            "OnTVInputPropertiesList",
            "OnTVOutputRenderPropertiesList",
            "OnDocFormRender"
          ]
        }
      ],
      "snippets": [
        {
          "name": "daterange",
          "description": "Format a daterange custom template variable",
          "file": "daterange.snippet.php",
          "properties": [
            {
              "name": "value",
              "value": ""
            },
            {
              "name": "tvname",
              "value": ""
            },
            {
              "name": "docid",
              "value": ""
            },
            {
              "name": "format",
              "value": "%e.| %B |%Y"
            },
            {
              "name": "separator",
              "value": "&thinsp;–&thinsp;"
            },
            {
              "name": "locale",
              "value": ""
            },
            {
              "name": "stripEqualParts",
              "type": "combo-boolean",
              "value": "1"
            }
          ]
        }
      ]
    },
    "systemSettings": [
      {
        "key": "format",
        "area": "site",
        "value": "%e.| %B |%Y"
      },
      {
        "key": "manager_format",
        "area": "site",
        "value": "j.| F |Y"
      },
      {
        "key": "separator",
        "area": "site",
        "value": "&thinsp;–&thinsp;"
      }
    ]
  },
  "build": {
    "readme": "docs/readme.txt",
    "license": "docs/license.txt",
    "changelog": "docs/changelog.txt"
  }
}