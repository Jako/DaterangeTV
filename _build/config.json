{
  "name": "DaterangeTV",
  "lowCaseName": "daterangetv",
  "description": "Date range custom template variable",
  "author": "Thomas Jakobi",
  "version": "1.4.3",
  "package": {
    "elements": {
      "plugins": [
        {
          "name": "DaterangeTV",
          "description": "DaterangeTV runtime hooks - registers custom TV input & output types and includes javascripts on document edit pages.",
          "file": "daterange.plugin.php",
          "events": [
            "OnManagerPageBeforeRender",
            "OnTVInputPropertiesList",
            "OnTVInputRenderList",
            "OnTVOutputRenderList",
            "OnTVOutputRenderPropertiesList"
          ]
        }
      ],
      "snippets": [
        {
          "name": "Daterange",
          "description": "Format a daterange custom template variable",
          "file": "daterange.snippet.php",
          "properties": [
            {
              "name": "value",
              "value": ""
            },
            {
              "name": "tvname",
              "value": ""
            },
            {
              "name": "docid",
              "value": ""
            },
            {
              "name": "format",
              "value": "%e.| %B |%Y"
            },
            {
              "name": "separator",
              "value": "&thinsp;–&thinsp;"
            },
            {
              "name": "locale",
              "value": ""
            },
            {
              "name": "stripEqualParts",
              "type": "combo-boolean",
              "value": "1"
            }
          ]
        }
      ]
    },
    "systemSettings": [
      {
        "key": "debug",
        "area": "system",
        "type": "combo-boolean",
        "value": "0"
      },
      {
        "key": "format",
        "area": "site",
        "value": "%e.| %B |%Y"
      },
      {
        "key": "manager_format",
        "area": "site",
        "value": "j.| F |Y"
      },
      {
        "key": "separator",
        "area": "site",
        "value": "&thinsp;–&thinsp;"
      }
    ]
  },
  "dependencies": [
    {
      "name": "php",
      "version": ">=7.2"
    },
    {
      "name": "modx",
      "version": ">=2.6"
    }
  ],
  "build": {
    "readme": "docs/readme.md",
    "license": "docs/license.md",
    "changelog": "docs/changelog.md",
    "setupOptions": {
      "source": "setup.options.php"
    },
    "resolver": {
      "after": [
        "resolve.cleanup.php",
        "resolve.treehillstudio.php"
      ]
    }
  }
}
